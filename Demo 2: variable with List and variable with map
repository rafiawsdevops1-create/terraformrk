root@ip-172-31-33-146:~/myterraformfiles# cat aws_infra.tf
provider "aws" {
  region = var.region[1]
}

data "aws_ami" "myami" {
  owners      = ["amazon"]
  most_recent = true

  filter {
    name   = "name"
    values = ["amzn2-ami-hvm-*-x86_64-gp2"]
  }

  filter {
    name   = "architecture"
    values = ["x86_64"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
}

resource "aws_instance" "myec2" {

  ami           = data.aws_ami.myami.id
  instance_type = var.instance_type["test"]

  tags = {
    Name = "${var.env}-${count.index}" #name of stance will be Dev-0,Dev-1,Dev-2,Dev3 in Aws
  }
   count         = 5
}


root@ip-172-31-33-146:~/myterraformfiles# cat variable.tf
variable "region" {
  type    = list(string)
  default = ["us-east-1", "us-west-2", "us-east-2"]
}

variable "instance_type" {
  type = map(string)
  default = {
    dev  = "t3.micro"
    test = "t3.medium"
  }
}

variable "env" {
  type    = string
  default = "dev"
}

